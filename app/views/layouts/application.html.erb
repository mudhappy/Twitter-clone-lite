<!DOCTYPE html>
<html>
  <head>
    <title>Twitterapp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="app_messages">
      <p class="notice <%= " none " if notice.nil? %>"><%= notice %></p>
      <p class="alert <%= " none " if alert.nil? %>"><%= alert %></p>
    </div>
    <%= yield %>
  </body>
</html>
